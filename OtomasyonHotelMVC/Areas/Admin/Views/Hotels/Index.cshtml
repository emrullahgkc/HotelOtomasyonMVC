@using Entity.ViewModels
@model List<HotelsViewModel>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
         Fotoğraf
        </th>
        <th>
          Hotel Adı
        </th>
        <th>
          Adres
        </th>
        <th>
         Kuruluş Yılı
        </th>
        <th>
            Aktif Mi?
        </th>
     
   

    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Id)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.hotelPhoto)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.hotelName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.hotelAddress)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.foundationYear)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.isAktive)
    </td>

    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
        @Html.ActionLink("Delete", "HotelDelete", new { id = item.Id })
    </td>
</tr>
}

</table>
