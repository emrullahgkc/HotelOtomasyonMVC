
@helper card(string lnk = "#", string css = "fa fa-fw fa-heart", string text = "", string style = "", string iconstyle = "color:white")
{//ESKİSİ AMA ÇOK GÜZELDİ BUTON OLMADİGİ İÇİN KULLANMADİM
    <div class="col-xl-3 col-sm-6 mb-3">
        <div class="card dashboard text-white o-hidden h-100" style="@style">
            <a href="@lnk" style="text-decoration:none" )">
                <div class="card-body">
                    <div class="card-body-icon " style="@iconstyle">
                        <i class="@css"></i>
                    </div>
                    <div class="mr-5"><h5>@text</h5></div>
                </div>
            </a>
        </div>
    </div>

}

@helper ButtonCard(string onclick = "", string css = "fa fa-fw fa-heart", string text = "", string style = "") { 
    <div class="col-xl-3 col-sm-6 mb-3">
        <div class="card dashboard text-white o-hidden h-100">
            <button type="button" onclick="@onclick" style="@style;border-radius:25px" >
                <div class="card-body float-left">
                    <div class="card-body-icon ">
                        <i class="@css"></i>
                    </div>
                    <div class="mr-5"><h5>@text</h5></div>
                </div>
            </button>
        </div>
    </div>

}
@helper modal(string id="Modal",string header="", string onclick="",string style="") 
{ 
<div id="@id" class="modal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header "id="@id-modal-header">

                <h4 class="col-11 modal-title text-center" style="text-align:center">@header</h4>
                <button type="button" class="close" data-dismiss="modal" onclick="@onclick" aria-label="Close">
                    <span aria-hidden="true" style="@style">&times;</span>
                </button>




            </div>
            <div id="@id-ModalBody" class="modal-body">

            </div>

        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>}

